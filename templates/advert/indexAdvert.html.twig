{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} - index Advert{% endblock %}

{% block body %}
<!DOCTYPE html>
<body>
  <p>
    <h2>Liste des annonces</h2>
    <ul>
      {% for advert in listAdverts %}
        <li>
          <a href="{{ path('advert_view', {'id': advert.id}) }}"> {{ advert.title }} id : {{advert.id}}</a>
          par {{ advert.author }}, le {{ advert.datecrea | date('d/m/Y H:i:s') }}
        </li>
      {% else %}
        <li>Pas (encore !) d'annonces</li>
      {% endfor %}
    </ul>
    <ul class="pagination">
      {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
      {% for p in range(1, nbPages) %}
        <li{% if p == page %} class="active"{% endif %}>
          <a href="{{ path('advert_index', {'page': p}) }}">{{ p }}</a>
        </li>
      {% endfor %}
    </ul>
  </p>
</body>
{% endblock %}
