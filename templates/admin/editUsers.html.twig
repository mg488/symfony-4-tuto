{% extends 'base.html.twig' %}
{% block title %} {{ parent()}} - {% trans %} modify admin{% endtrans %} {% endblock %}
{% block body %}
    <h1 class="text-center">{% trans %} Edit user by Admin{% endtrans %}</h1>
    {{form_start(form)}}
    <div class='form-group'>
        <div class="row">
            {{form_label(form.username, "Username",{'label_attr':{'class':'col-sm-2 control-label'}})}}
            <div class="form-error">
            {{form_errors(form.username)}}
            </div>
            <div class='col-sm-8'>
                {{form_widget(form.username,{'attr': {'class': 'form-control'}})}}
            </div>
        </div>
    </div>
    <div class='form-group'>
        <div class="row">
            {{form_label(form.roles, "Roles ",{'label_attr':{'class':'col-sm-2 control-label'}})}}
            <div class="form-error">
            {{form_errors(form.roles)}}
            </div>
            <div class='col-sm-8'>
                {{form_widget(form.roles,{'attr': {'class': 'form-control'}})}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class='col-sm-10'>
            {{form_widget(form.save,{'attr': {'class': 'btn btn-success pull-right'}})}}
        </div>
    </div>
    {{form_rest(form)}}
    {{form_end(form)}}
{% endblock %}