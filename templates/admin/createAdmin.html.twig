{% extends 'base.html.twig' %}
{% block title %} {{ parent()}} - admin index {% endblock %}

{% block body %}
    <h1 class="text-center">Gestion des utilisateurs</h1>
     {% for message in app.flashes('notice') %} 
        <div class="modal-body">
            <div class="alert alert-success" role="alert">{{ message }} <br></div>
        </div>
    {% endfor %}
    <div class="well form-horizontal col-sm-10 col-sm-offset-2">
        {{form_start(form,{'attr': {'class': 'form-horizontal'}})}} 

        <div class="my-custom-class-for-errors">
             {{ form_errors(form) }}
        </div>
        <div class="form-group">
           {{form_label(form.username, "Username :",{'label_attr': {'class':'col-sm-3 control-label'}})}}           
            <div class="form-error">
                {{ form_errors(form.username) }}
            </div>
            <div class='col-sm-6'>
               {{form_widget(form.username,{'attr':{'class': 'form-control'}})}}
           </div>
       </div>
        <div class="form-group">
           {{form_label(form.password, "Password :",{'label_attr': {'class':'col-sm-3 control-label'}})}}           
            <div class="form-error">
                {{ form_errors(form.password) }}
            </div>
            <div class='col-sm-6'>
               {{form_widget(form.password,{'attr':{'class': 'form-control'}})}}
           </div>
       </div>
        <div class="form-group">
           {{form_label(form.roles, "Roles :",{'label_attr': {'class':'col-sm-3 control-label'}})}}           
            <div class="form-error">
                {{ form_errors(form.roles) }}
            </div>
            <div class='col-sm-6'>
               {{form_widget(form.roles,{'attr':{'class': 'form-control'}})}}
           </div>
       </div>
       {{form_row(form.save)}}
       {{form_rest(form)}}
       {{form_end(form)}}
    </div>
{% endblock %}
