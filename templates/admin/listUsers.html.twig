{% extends 'base.html.twig' %}
{% block title %} {{ parent()}} - {% trans %} list admin{% endtrans %} {% endblock %}

{% block body %}
    {# <h1>Liste des admins</h1>  #}
    <h1>{% trans %} List of admins{% endtrans %}</h1> 
        <div class="col-sm-12">
            {% if  app.user.username is defined %}
                <small>
                {# Bonjour  #}
                {% trans %} Hello {% endtrans %}
                : {{ app.user.username }} <br>
                    {% trans %} Roles{% endtrans %} :
                    {% for i in 0..app.user.roles | length - 1 %}
                        {{app.user.roles[i]}} {% if not loop.last %} , {% endif %}
                    {% endfor %}
                </small>
            {% endif %}
            {% for message in app.flashes('notice') %} 
                <div class="modal-body">
                    <div class="alert alert-success" role="alert">{{ message }} <br></div>
                </div>
            {% endfor %}
      
        <table class="table  table table-bordered">
        <thead>
            <tr>
            <th scope="col">{% trans %} Count{% endtrans %}</th>
            <th scope="col">{% trans %} Username{% endtrans %}</th>
            <th scope="col">{% trans %} Roles{% endtrans %}</th>
            <th scope="col">{% trans %} Last Connection{% endtrans %}</th>
            <th scope="col">{% trans %} Edit{% endtrans %}</th>
            <th scope="col">{% trans %}Delete {% endtrans %}</th>
            </tr>
        </thead>
       {% for listUser in  listUsers %}
            <tr>
                <th scope="row">{{loop.index}}</th>
                <th scope="row">{{listUser.username}}</th>
                <td>
                    {% for i in 0..listUser.roles | length - 1 %}
                        {{listUser.roles[i]}} {% if not loop.last %} , {% endif %}
                    {% endfor %}
                </td>
                <td>{{listUser.lastLogin | date('d/m/Y H:i:s')}}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td><a class="btn btn-success" href="{{path('admin_edit_roles_user',{'id': listUser.id})}}" role="button"><i class="glyphicon glyphicon-pencil" ></i></a></td>
                {% endif %}
                
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <td><a class="btn btn-danger" href="{{path('admin_delete_user',{'id': listUser.id})}}" role="button">
                    <i class="glyphicon glyphicon-trash" ></i></a></td>
                {% endif %}
                
            </tr>
         {% endfor %}
    </table>
    </div>
{% endblock %}